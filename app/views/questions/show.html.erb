<h1>Show question</h1>

<p>
  <%=  @question.body %>
</p>

<h2>Answers</h2>

<%= link_to 'New answer', new_question_answer_path(@question) %>

<table>
  <tr>
    <th>Body</th>
    <th>Correct?</th>
    <th colspan="3">Actions</th>
  </tr>

  <% @question.answers.each do |answer| %>
    <tr>
      <td><%= answer.body %></td>
      <td><%= answer.correct? ? 'Yes' : ' ' %></td>
      <td><%= link_to 'Show', answer_path(answer) %></td>
      <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
      <td><%= link_to 'Delete', answer_path(answer), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Edit', edit_question_path(@question) %> 
<%= link_to 'Back', test_path(@question.test) %>
<%= link_to "Delete", question_path(@question), method: :delete %>
