<h1>Tests</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Level</th>
    <th>Questions count</th>
    <th>Actions</th>
  </tr>

  <%= render @tests %>

</table>

<% if @selected_test %>
  <h2>Selected Test: <%= @selected_test.title %> (Level: <%= @selected_test.level %>)</h2>

  <h3>Questions</h3>

  <table>
    <tr>
      <th>Body</th>
      <th colspan="3">Actions</th>
    </tr>

    <%= render @selected_test.questions %>
  </table>

  <p><%= link_to "Add question", new_test_question_path(@selected_test) %></p>
<% end %>
