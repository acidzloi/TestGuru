<% form_model = @answer.new_record? ? [@question, @answer] : @answer %>

<%= form_with(model: form_model, local: true) do |form| %>
  <%= render 'shared/errors', resource: @answer %>

  <p>
    <%= form.label :body %><br>
    <%= form.text_field :body, id: :answer_body %>
  </p>

  <p>
    <%= form.label :correct %>:
    <%= form.check_box :correct, id: :answer_correct %>
  </p>

  <p><%= form.submit %></p>
<% end %>
